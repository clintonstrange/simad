<div class="container mt-4">
    <div class="d-flex flex-row justify-content-center">
        <form id="edit-product-form">
            <h2 class="text-dark text-center">Edit Product</h2>
            <div class="form-group">
                <label class="text-dark font-weight-bold" for="product-year">Edit Product Year:</label>
                <input class="form-contorl" name="product-year" type="text" value="{{product.year}}" />
            </div>
            <div class="form-group">
                <label class="text-dark font-weight-bold" for="product-make">Edit Product Make:</label>
                <input class="form-contorl" name="product-make" type="text" value="{{product.make}}" />
            </div>
            <div class="form-group">
                <label class="text-dark font-weight-bold" for="product-model">Edit Product Model:</label>
                <input class="form-contorl" name="product-model" type="text" value="{{product.model}}" />
            </div>
            <div class="d-flex justify-content-center">
                <button class="btn btn-warning" type="submit">Submit Change to Product</button>
            </div>
        </form>
    </div>
    <div class="d-flex flex-row justify-content-center mt-4">
        <button class="btn btn-danger btn-lg" id="delete-product-btn" type="submit">Delete Product</button>
    </div>
</div>

<script src="/javascript/edit-product.js"></script>
<script src="/javascript/delete-product.js"></script>